  <body>
<%- include ('../partials/navbar.ejs') %>
<div class="text-center card-body" id="pomodoro">
  <div class=”row”>
    <div class=”col-6 align-self-center”>
      <div class=”card card-block”>
        <%- include('../partials/flashMessagesAndErrors.ejs') %>
  <form class="form-signin" role="form" method="POST" action="/api/users/register">
    <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
    <a href="/api/users/login" >Already a member?</a>
    <label for="inputName" class="sr-only">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Your name" required autofocus>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
    <!-- <div class="checkbox mb-3">
