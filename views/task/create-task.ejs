<!doctype html>
<html lang="en">
  <head>
<%- include('../partials/head.ejs') %> 
<link href="/css/loginAndRegisterCustom.css" rel="stylesheet">
<!-- font awesome css -->
<link rel="stylesheet" href="/css/font-awesome.min.css">
    <title>Create Task Heed.place</title>
  </head>

  <body>
<%- include ('../partials/navbar.ejs') %>
<main role="main" class="col-md-9 mx-sm-auto col-lg-10">
  <section>
    <div class="container-fluid">
<div class="text-center card-body">
  <div class=”row”>
    <div class=”col-6 align-self-center”>
      <div class=”card card-block”>
<%- include('../partials/flashMessagesAndErrors.ejs') %>
        <form class="form-signin" role="form" method="POST" action="/api/users/projects/tasks/create-task/<%= projectName._id %>">
          <h1 class="h3 mb-3 font-weight-normal"><i class="fa fa-tasks" aria-hidden="true"></i>&nbsp;&nbsp;Create your Task for Chosen <%= projectName.projectName %> Project</h1>
          <label for="inputTaskName" class="sr-only">Name of Your Task</label>
          <br />
          <input type="text" id="inputTaskName" name="taskName" class="form-control" placeholder="Name of Your New Task" required>
          <br />
          
          <br />
          <textarea type="text" id="inputTaskDescription" name="taskDescription" class="form-control" placeholder="Describe Your Task" rows="6"></textarea>
          <br />
          <button class="btn btn-lg btn-primary btn-block" type="submit">Create Task</button>
        </form>
      </div>
      </div> 
      </div>
      </div>
      </div>
      </section> 
    </main>
      <%- include ('../partials/footer.ejs') %>
</body>
</html>